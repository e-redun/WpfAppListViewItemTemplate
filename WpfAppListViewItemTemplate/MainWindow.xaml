        <Style x:Key="tt" TargetType="ListView">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Items.Count}" Value="5">
                    <Setter Property="Background" Value="Red"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{Binding SelectedUser.FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   Background="BurlyWood"
                   Visibility="Visible"
                   />
        <!--ItemsSource="{Binding Users, Converter={StaticResource MyConverter}}"-->

        <ListView Grid.Column="1"
                  Background="LightYellow"
                  ItemsSource="{Binding Users}"
                  SelectedItem="{Binding SelectedUser}"
                  ItemTemplate="{StaticResource MyItemTemplate2}"
                  Style="{StaticResource tt}"
                  />


                  <!--Style="{StaticResource tt}"-->
        <StackPanel Grid.Column="2"
                    >
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=qq, Path=Items.Count}" Value="5">
                            <Setter Property="Background" Value="DarkBlue"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>

            <TextBlock 
                   Text="{Binding Users.Count}"
                   >
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=qq, Path=Items.Count}" Value="5">
                                <Setter Property="Background" Value="DarkGreen"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>


            <ListView 
                  x:Name="qq"
                  ItemsSource="{Binding Users}"
                  SelectedItem="{Binding SelectedUser}"
                  ItemTemplate="{StaticResource MyItemTemplate2}"
                Background="Transparent"
                  >
                <!--<ListView.Style>
                <Style TargetType="ListView">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Items.Count}" Value="5">
                            <Setter Property="Background" Value="DarkBlue"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.Style>-->
            </ListView>
        </StackPanel>


        <TextBlock Grid.Row="1" Grid.Column="2"
                   Text="{Binding ElementName=qq, Path=Items.Count}"
                   >
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Background" Value="Beige"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=qq, Path=Items.Count}" Value="4">
                            <Setter Property="Background" Value="Red"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        
        <!--<ListView Grid.Column="2"
                  Background="LightBlue"
                  ItemsSource="{Binding People, Converter={StaticResource MyConverter2}}"
                  ItemTemplate="{StaticResource GridItemTemplate}"
                  >
        </ListView>-->

    </Grid>
</Window>